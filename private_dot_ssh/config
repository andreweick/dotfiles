# remember to symlink this to your ~/.ssh/config
# ln -s ~/Development/dotfiles/ssh/config ~/.ssh/config

LogLevel=quiet
# VisualHostKey yes
# PKCS11Provider /Library/OpenSC/lib/pkcs11/opensc-pkcs11.so

Host *.missionfocus.com
  ForwardAgent yes

Host catfish.missionfocus.com lefty.missionfocus.com ty.missionfocus.com
  ProxyCommand /usr/local/bin/cloudflared access ssh --hostname %h

Host *gs.mil
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# The escape character is default to '~', but this maps it to ctrl-y. This allows you to get a shell on the local machine while keeping the ssh tunnel open.  ^y? (help), ^yC (command line)
Host *
EscapeChar ^y
