# remember to symlink this to your ~/.ssh/config
# ln -s ~/Development/dotfiles/ssh/config ~/.ssh/config


# [Use 1Password as SSH Agent store](https://developer.1password.com/docs/ssh/get-started#step-3-turn-on-the-1password-ssh-agent)
Host *
  IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"


Host *gs.mil
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

# The escape character is default to '~', but this maps it to ctrl-y. This allows you to get a shell on the local machine while keeping the ssh tunnel open.  ^y? (help), ^yC (command line)
Host *
EscapeChar ^y
