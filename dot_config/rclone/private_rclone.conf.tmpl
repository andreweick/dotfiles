# This is the base, non-sensitive part of your rclone.conf
# It will be applied on all machines.

[jefferson]
type = sftp
host = jefferson
user = root
disable_hashcheck = true
shell_type = unix

[pudge]
type = sftp
host = pudge
user = mae
disable_hashcheck = true
shell_type = unix


[ty]
type = sftp
host = ty
shell_type = unix
md5sum_command = md5sum
sha1sum_command = sha1sum

